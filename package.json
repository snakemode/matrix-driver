{
  "name": "@snakemode/matrix-driver",
  "version": "1.0.25",
  "description": "A general purpose LED matrix driver / simulator sandbox",
  "main": "dist/app/index.js",
  "types": "dist/app/index.d.ts",
  "scripts": {
    "prestart": "cd api && npm install",
    "start": "run-p dev:api dev:server",
    "test": "jest",
    "ci": "tsc",

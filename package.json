    "matrix",
    "neopixel"
  ],
  "author": "Jo Franchetti, David Whitney",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/snakemode/matrix-driver/issues"
  },
  "homepage": "https://github.com/snakemode/matrix-driver#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "mqtt": "^4.2.6",
    "npm-run-all": "^4.1.5",
    "snowpack": "^2.17.1",
    "text-encoding": "^0.7.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "ably": "^1.2.4",
